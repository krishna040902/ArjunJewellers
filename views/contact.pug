            <form action="/contact" method="post" class="form" id="formform">
                <div class="formitem">
                    <label for="name">Name</label>
                    <input class="input" id="name" name="name" type="text" required>
                </div>
                <div class="formitem">
                    <label for="mobile">Mobile</label>
                    <input class="input" id="mobile" name="mobile" type="phone" required>
                </div>
                <div class="formitem">
                    <label for="email">E-mail</label>
                    <input class="input" id="email" name="email" type="email" size="25" required>
                </div>
                <div class="formitem">
                    <label for="msg">Your Message</label>
                    <textarea name="msg" id="msg" cols="30" rows="5" required></textarea>
                </div>
                <div class="submit-button">
                    <button type="submit" class="submit-link">Submit</button>
                    //<a href="#" class="submit-link">Submit</a>
